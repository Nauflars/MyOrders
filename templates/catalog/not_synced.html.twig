<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Customer Not Synced</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: linear-gradient(135deg, #06038D 0%, #E87722 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .card {
            background: #fff;
            border-radius: 16px;
            padding: 48px;
            max-width: 500px;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.2);
        }

        .icon {
            font-size: 64px;
            margin-bottom: 24px;
        }

        h1 {
            color: #333333;
            font-size: 28px;
            margin-bottom: 16px;
        }

        p {
            color: #A9A8B4;
            line-height: 1.6;
            margin-bottom: 24px;
        }

        .info {
            background: #F5F5F5;
            border-radius: 8px;
            padding: 16px;
            margin: 24px 0;
            text-align: left;
        }

        .info-row {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #EAEAEA;
        }

        .info-row:last-child {
            border-bottom: none;
        }

        .info-label {
            color: #A9A8B4;
            font-weight: 600;
        }

        .info-value {
            color: #333333;
            font-family: monospace;
        }

        .button {
            display: inline-block;
            background: #E87722;
            color: #fff;
            padding: 14px 32px;
            border-radius: 8px;
            border: none;
            font-weight: 600;
            font-size: 16px;
            cursor: pointer;
            transition: all 0.2s;
        }

        .button:hover {
            transform: translateY(-2px);
            background: #06038D;
        }

        .button:disabled {
            background: #D9D9D9;
            cursor: not-allowed;
            transform: none;
        }

        .message {
            margin-top: 16px;
            padding: 12px;
            border-radius: 8px;
            display: none;
            font-size: 14px;
        }

        .message.success {
            background: #d4edda;
            color: #155724;
            display: block;
        }

        .message.error {
            background: #f8d7da;
            color: #721c24;
            display: block;
        }

        .message.info {
            background: #d1ecf1;
            color: #0c5460;
            display: block;
        }

        @keyframes dots {
            0%, 20% { content: '.'; }
            40% { content: '..'; }
            60%, 100% { content: '...'; }
        }

        .loading::after {
            content: '...';
            animation: dots 1.5s infinite;
        }
    </style>
</head>
<body>
    <div class="card">
        <div class="icon">üîç</div>
        <h1>Customer Not Found</h1>
        <p>This customer has not been synchronized yet. Please trigger a synchronization first.</p>
        
        <div class="info">
            <div class="info-row">
                <span class="info-label">Sales Organization</span>
                <span class="info-value">{{ sales_org }}</span>
            </div>
            <div class="info-row">
                <span class="info-label">Customer ID</span>
                <span class="info-value">{{ customer_id }}</span>
            </div>
        </div>

        <button onclick="startSync()" class="button" id="syncButton">
            Start Synchronization
        </button>
        
        <div id="message" class="message"></div>
    </div>

    <script>
        let checkInterval = null;
        
        async function startSync() {
            const button = document.getElementById('syncButton');
            const message = document.getElementById('message');
            
            console.log('Starting sync for customer {{ customer_id }}, sales org {{ sales_org }}');
            
            button.disabled = true;
            button.textContent = 'Starting Sync';
            button.classList.add('loading');
            message.className = 'message';
            message.style.display = 'none';
            
            try {
                const payload = {
                    salesOrg: '{{ sales_org }}',
                    customerId: '{{ customer_id }}'
                };
                
                console.log('Sending request:', payload);
                
                const response = await fetch('/api/sap/sync', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(payload)
                });
                
                console.log('Response status:', response.status);
                
                const data = await response.json();
                console.log('Response data:', data);
                
                if (response.ok) {
                    message.className = 'message success';
                    message.textContent = '‚úì Synchronization started! Checking status...';
                    message.style.display = 'block';
                    
                    button.textContent = 'Syncing';
                    button.classList.remove('loading');
                    
                    console.log('Starting to check for sync completion...');
                    
                    // Start checking if customer is synced
                    checkSyncStatus();
                } else {
                    throw new Error(data.error || 'Synchronization failed');
                }
            } catch (error) {
                console.error('Error starting sync:', error);
                message.className = 'message error';
                message.textContent = '‚úó Error: ' + error.message;
                message.style.display = 'block';
                button.disabled = false;
                button.textContent = 'Start Synchronization';
                button.classList.remove('loading');
            }
        }
        
        async function checkSyncStatus() {
            const message = document.getElementById('message');
            const button = document.getElementById('syncButton');
            
            let attempts = 0;
            const maxAttempts = 60; // 60 attempts * 3 seconds = 3 minutes max
            
            checkInterval = setInterval(async () => {
                attempts++;
                console.log(`Checking sync status (attempt ${attempts}/${maxAttempts})...`);
                
                try {
                    // Check if the catalog page returns data (customer synced)
                    const response = await fetch('/catalog/{{ sales_org }}/{{ customer_id }}', {
                        method: 'GET'
                    });
                    
                    const html = await response.text();
                    
                    // If the response contains the material-catalog content, sync is done
                    if (html.includes('Material Catalog') || html.includes('materials-grid')) {
                        console.log('Customer synced! Redirecting...');
                        clearInterval(checkInterval);
                        
                        message.className = 'message success';
                        message.textContent = '‚úì Synchronization complete! Redirecting...';
                        
                        setTimeout(() => {
                            window.location.href = '/catalog/{{ sales_org }}/{{ customer_id }}';
                        }, 1000);
                    } else if (attempts >= maxAttempts) {
                        clearInterval(checkInterval);
                        message.className = 'message info';
                        message.textContent = 'Sync is taking longer than expected. Click button to refresh.';
                        button.disabled = false;
                        button.textContent = 'Refresh Page';
                        button.onclick = () => location.reload();
                    } else {
                        message.className = 'message info';
                        message.textContent = `‚ü≥ Syncing... (${attempts}/${maxAttempts})`;
                        message.style.display = 'block';
                    }
                } catch (error) {
                    console.error('Error checking status:', error);
                }
            }, 3000); // Check every 3 seconds
        }
        
        // Log that script loaded
        console.log('Sync script loaded successfully');
        console.log('Customer ID: {{ customer_id }}, Sales Org: {{ sales_org }}');
    </script>
</body>
</html>
