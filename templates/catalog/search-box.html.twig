{# Search box partial with debounced search and semantic toggle #}
<div class="search-container">
    <div class="search-box">
        <div class="search-input-wrapper">
            <input 
                type="text" 
                id="searchInput" 
                class="search-input" 
                placeholder="Search materials by number or description..."
                value="{{ searchTerm|default('') }}"
                data-search-url="{{ path('app_catalog_search') }}"
                data-customer-id="{{ customerId }}"
            >
            <button class="search-clear" id="searchClear" style="display: none;">âœ•</button>
        </div>
        
        <div class="search-options">
            <label class="search-toggle">
                <input type="checkbox" id="semanticSearch" {{ semanticEnabled|default(false) ? 'checked' : '' }}>
                <span class="toggle-label">
                    ðŸ§  Semantic Search
                    <span class="toggle-hint">(Natural language)</span>
                </span>
            </label>
            
            <span class="search-count" id="searchCount"></span>
        </div>
    </div>
</div>

<script>
(function() {
    const searchInput = document.getElementById('searchInput');
    const searchClear = document.getElementById('searchClear');
    const semanticCheckbox = document.getElementById('semanticSearch');
    const searchCount = document.getElementById('searchCount');
    
    if (!searchInput) return;
    
    const searchUrl = searchInput.dataset.searchUrl;
    const customerId = searchInput.dataset.customerId;
    
    let debounceTimer = null;
    let currentRequest = null;
    
    function showClearButton() {
        if (searchInput.value.trim()) {
            searchClear.style.display = 'block';
        } else {
            searchClear.style.display = 'none';
        }
    }
    
    function performSearch() {
        const query = searchInput.value.trim();
        const useSemantic = semanticCheckbox.checked;
        
        // Cancel previous request
        if (currentRequest) {
            currentRequest.abort();
        }
        
        // If empty, reload page to show all
        if (!query) {
            window.location.href = `${searchUrl}?customer_id=${customerId}`;
            return;
        }
        
        // Show loading state
        searchCount.textContent = 'Searching...';
        
        // Create new request
        currentRequest = new AbortController();
        
        fetch(`${searchUrl}?customer_id=${customerId}&q=${encodeURIComponent(query)}&semantic=${useSemantic ? '1' : '0'}`, {
            signal: currentRequest.signal
        })
            .then(res => res.json())
            .then(data => {
                // Update results count
                searchCount.textContent = `${data.total} result${data.total !== 1 ? 's' : ''}`;
                
                // Update materials grid
                updateMaterialsGrid(data.materials);
                
                // Update URL without reload
                const url = new URL(window.location);
                url.searchParams.set('q', query);
                url.searchParams.set('semantic', useSemantic ? '1' : '0');
                window.history.pushState({}, '', url);
            })
            .catch(err => {
                if (err.name !== 'AbortError') {
                    console.error('Search failed:', err);
                    searchCount.textContent = 'Search failed';
                }
            })
            .finally(() => {
                currentRequest = null;
            });
    }
    
    function updateMaterialsGrid(materials) {
        const grid = document.querySelector('.materials-grid');
        if (!grid) return;
        
        if (materials.length === 0) {
            grid.innerHTML = '<div class="no-results">No materials found matching your search.</div>';
            return;
        }
        
        // TODO: Update this template based on your material card structure
        grid.innerHTML = materials.map(mat => `
            <div class="material-card">
                <div class="material-number">${mat.materialNumber || mat.material_number}</div>
                <div class="material-name">${mat.description || 'No description'}</div>
                ${mat.price ? `<div class="price">${mat.price} ${mat.currency || 'EUR'}</div>` : ''}
                ${mat.similarity ? `<div class="similarity-score">Relevance: ${Math.round(mat.similarity * 100)}%</div>` : ''}
            </div>
        `).join('');
    }
    
    // Debounced search on input
    searchInput.addEventListener('input', () => {
        showClearButton();
        
        clearTimeout(debounceTimer);
        debounceTimer = setTimeout(() => {
            performSearch();
        }, 500); // 500ms debounce
    });
    
    // Search on Enter key
    searchInput.addEventListener('keypress', (e) => {
        if (e.key === 'Enter') {
            clearTimeout(debounceTimer);
            performSearch();
        }
    });
    
    // Clear button
    searchClear.addEventListener('click', () => {
        searchInput.value = '';
        showClearButton();
        performSearch();
    });
    
    // Semantic toggle
    semanticCheckbox.addEventListener('change', () => {
        if (searchInput.value.trim()) {
            performSearch();
        }
    });
    
    // Initial state
    showClearButton();
    if (searchInput.value.trim()) {
        // Count already displayed results
        const grid = document.querySelector('.materials-grid');
        if (grid) {
            const count = grid.querySelectorAll('.material-card').length;
            searchCount.textContent = `${count} result${count !== 1 ? 's' : ''}`;
        }
    }
})();
</script>

